{
  "name": "dva-helper",
  "displayName": "dva-helper",
  "description": "dva helper make you write code happy",
  "version": "0.0.2",
  "license": "MIT",
  "engines": {
    "vscode": "^1.33.0"
  },
  "publisher": "DiamondYuan",
  "repository": "https://github.com/DiamondYuan/dva-helper",
  "activationEvents": [
    "workspaceContains:package.json"
  ],
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "commit": "git-cz",
    "package": "vsce package",
    "publish": "vsce publish",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test-local": " egg-bin test",
    "cov": "egg-bin cov",
    "lint": "eslint --ext .js,.ts .",
    "ci": "npm run lint && npm run cov",
    "test-watch": "yarn test-local --watch --watch-extensions ts"
  },
  "pre-commit": [
    "lint"
  ],
  "egg": {
    "typescript": true
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@diamondyuan/eslint-config-typescript": "^6.0.0",
    "@types/babel-generator": "^6.25.3",
    "@types/babel-types": "^7.0.7",
    "@types/mocha": "^2.2.42",
    "@types/mz": "^0.0.32",
    "@types/node": "^10.12.21",
    "@types/power-assert": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "babel-eslint": "^10.0.1",
    "commitizen": "^3.1.1",
    "conventional-changelog-cli": "^2.0.17",
    "egg-bin": "^4.13.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.17.0",
    "typescript": "^3.4.5",
    "vsce": "^1.59.0",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "@babel/generator": "^7.4.4",
    "@babel/parser": "^7.4.4",
    "@babel/types": "^7.4.4",
    "mz": "^2.7.0"
  }
}
